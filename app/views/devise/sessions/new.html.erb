<div class="container">
  <div class="col-sm-12">
    <div class="well">
      <div class="row">
          <div class="form-horizontal">
            <div class="text-center">
            <h2>Sign in</h2>
          </div>
          </div>

          <%= simple_form_for(resource, :as => resource_name, :defaults => { :input_html => { :class => "form-control"}}, :url => session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, placeholder: 'Email', :required => false, :autofocus => true %>
            <%= f.input :password, placeholder: 'Password', :required => false %>
          </div>

          <div class="text-center">
            <%= f.button :submit, "Sign in", class: 'btn-primary btn-lg' %>
            <div class="text-center">
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
