<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <div class="well">
      <div class="row">
        <div class="form-horizontal">
          <div class="text-center">
            <h2>Sign up</h2>
          </div>
        </div>
        <%= simple_form_for(resource, :as => resource_name, :defaults => { :input_html => { :class => "form-control"}}, :url => registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, :required => true, :autofocus => true %>
          <%= f.input :password, :required => true %>
          <%= f.input :password_confirmation, :required => true %>
        </div>

        <div class="form-actions">
          <div class="text-center">
            <div><br><%= f.button :submit, "Sign up", class: 'btn-primary btn-lg sign-up-btn' %></div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
