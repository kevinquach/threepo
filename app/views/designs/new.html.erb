<h1> Upload Design </h1>

<%= simple_form_for Design.new, html: {multipart: true} do |f| %>
<%= f.input :title, label: "Name your design!" %><br><br>
<div class="form-group"><%= f.input :description, label:
  "Describe your design!" %></div>
<%= f.input :image, input_html: {id: 'image'} %><br><br>
<div id="image_preview"></div>
<%= f.button :submit, "Upload Your Design" %><br><br>
<%- end -%>

<%= javascript_include_tag "preview" %>
