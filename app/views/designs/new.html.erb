<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <div class="well">
      <div class="row">
        <div class="form-horizontal">
          <div class="text-center">
            <h1> Upload Design </h1>
          </div>
          <%= simple_form_for Design.new, html: {multipart: true} do |f| %>
          <%= f.input :title, label: "Name your design!" %><br><br>
          <%= f.input :description, label:
          "Describe your design!" %><br>
          <%= f.input :image, input_html: {id: 'image'}, label: "Upload a picture
          of your design (jpg/png)" %><br><br>
          <%= f.input :file, input_html: {id: 'file'}, label: "Upload your design
          (CAD)" %><br><br>
          <div id="image_preview"></div>
          <%= f.button :submit, "Upload Your Design", class: 'btn-primary btn-lg sign-up-btn' %><br><br>
          <%- end -%>

          <%= javascript_include_tag "preview" %>
        </div>
      </div>
    </div>
  </div>
</div>
