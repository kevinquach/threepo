source 'https://rubygems.org'

ruby '2.0.0'

gem 'anjlab-bootstrap-rails', :require => 'bootstrap-rails',
                              :github => 'anjlab/bootstrap-rails'
gem 'carrierwave'
gem 'devise'
gem 'haml-rails'
gem 'fog'
gem 'jbuilder', '~> 1.2'
gem 'jquery-rails'
gem 'pg'
gem 'rails', '4.0.0'
gem 'ransack'
gem 'rmagick'
gem 'simple_form'
gem 'turbolinks'

# For assets only and not required
# in production by default
gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'

group :doc do
  gem 'sdoc', require: false
end

group :production do
  gem 'rails_12factor'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'factory_girl'
  gem 'capybara'
  gem 'shoulda'
  gem 'pry-rails'
  gem 'launchy'
  gem 'valid_attribute'
  gem 'quiet_assets'
  gem 'dotenv-rails'
end
